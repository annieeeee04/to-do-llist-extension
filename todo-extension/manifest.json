{
    "manifest_version" : 3,
    "name" : "Simple Todo List",
    "version" : "1.0",
    "description" : "a minimal todo list in your browser",
    "action" : {
        "default_popup" : "popup.html",
        "default_title" : "Todo List"
    },
    "permissions" : [
        "storage",
        "contextMenus"
    ],
    "background" : {
        "service_worker" : "background.js"
    },
    "icons" : {
        "128" : "icon128.png"
    }
}